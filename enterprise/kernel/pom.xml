            <artifactId>ongdb-common</artifactId>
            <groupId>org.graphfoundation.ongdb</groupId>
            <scope>test</scope>
            <type>test-jar</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>ongdb-logging</artifactId>
            <groupId>org.graphfoundation.ongdb</groupId>
            <scope>test</scope>
            <type>test-jar</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>ongdb-kernel-api</artifactId>
            <groupId>org.graphfoundation.ongdb</groupId>
            <scope>test</scope>
            <type>test-jar</type>
            <version>${project.version}</version>

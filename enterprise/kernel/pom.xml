        </dependency>
        <dependency>
            <artifactId>it-test-support</artifactId>
            <groupId>org.graphfoundation.ongdb.community</groupId>
            <scope>test</scope>
            <version>${project.version}</version>
        </dependency>


        <dependency>
            <artifactId>ongdb-kernel</artifactId>
            <groupId>org.graphfoundation.ongdb</groupId>
            <version>${project.version}</version>
        </dependency>

        <!-- Neo4j test dependencies -->
        <dependency>
            <artifactId>ongdb-consistency-check</artifactId>
            <groupId>org.graphfoundation.ongdb</groupId>
            <scope>test</scope>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>ongdb-kernel</artifactId>
            <groupId>org.graphfoundation.ongdb</groupId>
            <scope>test</scope>
            <type>test-jar</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>kernel-it</artifactId>
            <groupId>org.graphfoundation.ongdb.community</groupId>
            <scope>test</scope>
            <type>test-jar</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>cypher-it</artifactId>
            <groupId>org.graphfoundation.ongdb.community</groupId>
            <scope>test</scope>
            <type>test-jar</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>ongdb-cypher</artifactId>
            <groupId>org.graphfoundation.ongdb</groupId>
            <scope>test</scope>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>ongdb-cypher-runtime-util</artifactId>
            <groupId>org.graphfoundation.ongdb</groupId>
            <scope>test</scope>
            <type>test-jar</type>
            <version>${project.version}</version>
